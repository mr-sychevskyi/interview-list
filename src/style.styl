*
  padding: 0
  margin: 0
  box-sizing: border-box
  font-family: 'Lato', 'Arial', sans-serif

body
  padding: 20px
  font-size: 16px
  line-height: 1.4

a
  color: #000
  text-decoration: none
  transition: all .4s

a
input
button
textarea
  outline: none

.title-primary
  margin-bottom: 25px
  text-align: center
  text-decoration: underline

.title-secondary
  margin-bottom: 10px
  color: rgba(0, 0, 0, .8)
  font-size: .8rem
  font-weight: 600

// Buttons
.btn
  display: inline-flex
  justify-content center
  align-items: center
  margin: 0 10px
  font-size: 1.4rem

.btn-edit
  transform: rotate(135deg)

.btn-delete
  color: #fff;
  background-color: #000

.btn-add
.btn-cancel
.btn-delete
  width: 35px;
  height: 35px;
  border: 3px solid #000
  border-radius: 50%

.btn-add:hover
.btn-cancel:hover
  color: rgba(255, 255, 255, 1)
  background-color: rgba(0, 0, 0, .9)

.btn-delete:hover
  color: rgba(0, 0, 0, 1)
  background-color rgba(255, 255, 255, 1)

.btn-edit:hover
.btn-accept:hover
  color: rgba(150, 150, 150, 1)

// Layout
.interview-list
  display: flex
  justify-content: center

.interview-list__item
  flex-basis: 35%

.separator
  display: block
  margin: 0 20px
  width: 2px
  background: #000

.interview-card
  border-radius 2px
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, .8)

.interview-card:not(:first-child)
  margin-top: 25px

.interview-card__controls
  display flex
  align-items center
  justify-content flex-end

  padding: 20px 10px
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, .8)

// Inputs
.interview-card__fields
  padding: 10px 20px

.form-group
  margin: 15px 0

textarea
input
  width: 100%
  padding: 5px 0
  font-size: 1rem
  border: none
  border-bottom: 1px solid rgba(200, 200, 200, .6)
  transition: all .4s

textarea
  resize: none

::placeholder
::-webkit-input-placeholder
  font-size: 1rem
  color: rgba(200, 200, 200, .9)

input[type="date"]::-webkit-clear-button
input[type="date"]::-webkit-inner-spin-button
  display: none

.hidden
  display: none